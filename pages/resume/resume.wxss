.body {
  display: flex;
  flex-direction: column;
}

.header {
  width: 750rpx;
  background: #ebebeb;
  text-align: center;
}

.bn {
  width: 750rpx;
}

.mylogo {
  width: 200rpx;
  height: 200rpx !important;
  margin: 0px auto;
  display: block;
  border: 8rpx solid #f1f1f1;
  border-radius: 50%;
  margin-top: -180rpx;
}

.name {
  font-size: 36rpx;
  margin: 10rpx 0 20rpx;
}

.container {
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.motto {
  text-align: center;
  font-size: 24rpx;
  padding: 10rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.user-info {
  margin: 20rpx 0 1rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

.user-info image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: -1rpx;
}

.user-info .item {
  display: flex;
  line-height: 60rpx;
  flex-direction: row;
  padding-left: 40rpx;
}

.user-info .item view {
  width: 50%;
}

.tem-line {
  border-bottom: 2rpx solid #f1f1f1;
  display: flex;
  margin: 30rpx 0 10rpx;
}

.tem-container {
  background: #f1f1f1;
  display: inline-block;
  margin: 0px auto;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0px 60rpx;
  border-radius: 30rpx;
  margin-bottom: -30rpx;
}

.job-for {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0rpx 10rpx 40rpx;
}

.job-for .item {
  display: flex;
  font-size: 24rpx;
  line-height: 60rpx;
}

.job-for .item view {
  width: 50%;
}

.skills {
  padding: 30rpx 0rpx 10rpx 0rpx;
  font-size: 24rpx;
}

.skills .item {
  padding: 0px 40rpx;
  line-height: 30rpx;
}

.skills .item .text {
  padding: 20rpx 0;
}

.job-line {
  padding-top: 40rpx;
}

.job-line .item {
  font-size: 24rpx;
  padding: 20rpx 40rpx;
}

.job-line .job-header {
  line-height: 40rpx;
}

.job-line .job-header .company {
  display: flex;
  justify-content: space-between;
}

.job-line .job-header .job-tit {
  color: #999;
  padding-bottom: 20rpx;
}

.job-line .job-con {
  margin-top: 10rpx;
  background: #f1f1f1;
  padding: 10rpx;
  color: #666;
  line-height: 40rpx;
  font-size: 20rpx;
  padding-bottom: 20rpx;
}

.project {
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.project .tit {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 0 10rpx;
}

.project .tit view {
  width: 50%;
  line-height: 46rpx;
}

.project .bg-txt {
  background: #f1f1f1;
  text-indent: 2em;
  color: #666;
  line-height: 40rpx;
  font-size: 20rpx;
}

.tem-containe-end {
  background: #f1f1f1;
  display: inline-block;
  margin: 0px auto;
  line-height: 33rpx;
  font-size: 20rpx;
  padding: 0px 60rpx;
  border-radius: 30rpx 30rpx 0 0;
  margin-bottom: -15rpx;
}
